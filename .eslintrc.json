{
  "extends": ["eslint:recommended", /* "plugin:node/recommended", */ "plugin:mocha/recommended", "xo", "prettier"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false,
    "babelOptions": {
      "plugins": ["@babel/plugin-syntax-import-assertions"]
    },
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "mocha": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "semi": 0,
    "quotes": 0,
    "indent": 0,
    "linebreak-style": 0,
    "no-console": 0,
    "prettier/trailingComma": "off",
    "object-shorthand": "off",
    "capitalized-comments": "off",
    "mocha/no-mocha-arrows": "off",
    "mocha/no-setup-in-describes": "off",
    "mocha/max-top-level-suites": ["warn", { "limit": 2 }],
    "mocha/no-setup-in-describe": "off",
    "no-unused-vars": [
      1,
      {
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ]
  },
  "plugins": ["prettier", "mocha"]
}
